<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:id="@+id/message_single_root"
    >

    <RelativeLayout
        android:id="@+id/text_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_single_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_text_background"
            android:padding="10dp"
            android:text="This is testing text"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/message_single_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/message_single_text"
            android:layout_toRightOf="@+id/message_single_text"
            android:paddingLeft="8dp"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/message_single_image"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/message_text_background"
            android:padding="10dp"
            android:scaleX="0.8" />

        <TextView
            android:id="@+id/message_single_time_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/message_single_image"
            android:layout_toRightOf="@+id/message_single_image"
            android:paddingLeft="8dp"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>