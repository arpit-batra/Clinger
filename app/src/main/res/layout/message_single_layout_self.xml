<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@drawable/message_text_background_self"
    android:gravity="right"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:id="@+id/message_single_root_self">

    <TextView
        android:id="@+id/message_single_time_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dsfsd sdds dflsndf"
        android:textSize="12sp"
        android:layout_alignBottom="@id/message_single_text_self"
        android:paddingRight="8dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/message_single_text_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the message"
        android:textSize="20sp"
        android:layout_toRightOf="@id/message_single_time_self"
        android:textColor="@color/black"/>
</RelativeLayout>