<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/request_single_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_single_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/default_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/request_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Display Name"
        app:layout_constraintLeft_toRightOf="@id/request_single_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/request_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status will appear here"
        app:layout_constraintLeft_toRightOf="@id/request_single_image"
        app:layout_constraintTop_toBottomOf="@id/request_single_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/request_single_accept_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/request_single_image"
        app:layout_constraintTop_toBottomOf="@id/request_single_status"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="#2dd417"
        android:text="ACCEPT"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/request_single_decline_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/request_single_accept_button"
        app:layout_constraintTop_toBottomOf="@id/request_single_status"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="#ff0000"
        android:text="DECLINE"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>